<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment05">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="环境指标"
        android:textSize="50sp"
        android:textStyle="bold"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:id="@+id/linear05_1"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="温度"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/round05"
                    android:id="@+id/text05_1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:id="@+id/linear05_2"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="湿度"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/round05"
                    android:id="@+id/text05_2"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:id="@+id/linear05_3"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="光照"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/round05"
                    android:id="@+id/text05_3"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:id="@+id/linear05_4"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="CQ2"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/round05"
                    android:id="@+id/text05_4"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:id="@+id/linear05_5"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="PM2.5"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/round05"
                    android:id="@+id/text05_5"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:id="@+id/linear05_6"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="道路状态"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/round05"
                    android:id="@+id/text05_6"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp" />



</LinearLayout>