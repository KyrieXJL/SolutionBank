<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment07">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="阈值设置"
        android:textStyle="bold"
        android:textSize="50sp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="自动报警："
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_marginLeft="320dp"
                />
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="35sp"
                android:id="@+id/text07"
                />
            <Switch
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/switch07"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="温      度："
                android:textSize="35sp"
                android:textStyle="bold"
                android:gravity="right"
                />
            <EditText
                android:layout_width="500dp"
                android:textStyle="bold"
                android:textSize="35sp"
                android:layout_height="match_parent"
                android:id="@+id/etext07_1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="湿      度："
                android:textSize="35sp"
                android:textStyle="bold"
                android:gravity="right"
                />
            <EditText
                android:layout_width="500dp"
                android:textStyle="bold"
                android:textSize="35sp"
                android:layout_height="match_parent"
                android:id="@+id/etext07_2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="光      照："
                android:textSize="35sp"
                android:textStyle="bold"
                android:gravity="right"
                />
            <EditText
                android:layout_width="500dp"
                android:textStyle="bold"
                android:textSize="35sp"
                android:layout_height="match_parent"
                android:id="@+id/etext07_3"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="CO2      ："
                android:textSize="35sp"
                android:textStyle="bold"
                android:gravity="right"
                />
            <EditText
                android:layout_width="500dp"
                android:textStyle="bold"
                android:textSize="35sp"
                android:layout_height="match_parent"
                android:id="@+id/etext07_4"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="PM2.5   ："
                android:textSize="35sp"
                android:textStyle="bold"
                android:gravity="right"
                />
            <EditText
                android:layout_width="500dp"
                android:textStyle="bold"
                android:textSize="35sp"
                android:layout_height="match_parent"
                android:id="@+id/etext07_5"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="道路状态："
                android:textSize="35sp"
                android:textStyle="bold"
                android:gravity="right"
                />
            <EditText
                android:layout_width="500dp"
                android:textStyle="bold"
                android:textSize="35sp"
                android:layout_height="match_parent"
                android:id="@+id/etext07_6"
                />
        </LinearLayout>
        <Button
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/btn07"
            android:text="保存"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="110dp" />



</LinearLayout>